-- CC-DOS v1.5

-- Variables
local build = {}
local drives = {}

build.dosdir = "CC-DOS"
build.version = "1.5"

-- Functions

local function loadApis()
    local apis = fs.list(build.dosdir.."/apis/")
    for k,v in pairs(apis) do
        os.loadAPI(build.dosdir.."/apis/"..v)
    end
end

local function bootstrap()
    help.setPath("/CC-DOS/help/")
    for k,v in pairs(shell.aliases()) do
        shell.clearAlias(k)
    end
    term.clear()
    term.setCursorPos(1,1)
    
    loadApis()
    
    print(os.version())
    
    term.setCursorPos(1,3)
    
    local mounts = {"A","B"}
    for k,v in pairs(mounts) do
        if storage.addDrive(v) == false then
            print("Drive "..v.." is disabled")
        end
    end
    storage.addDrive("C","hdd")
    
    sys.resetCache("sys")
    
    local cfg = os.getconfig()
    if not cfg.COMMAND == nil then
        shell.run(unpack(utils.explode(cfg.COMMAND," ")))
    else
        shell.run("/command.lua")
    end
end

bootstrap()
os.reboot()